{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "ES2016",
    "baseUrl": "./src",
    "paths": {
      "@typescript-demo-spa": ["index"],
      "@typescript-demo-spa/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
